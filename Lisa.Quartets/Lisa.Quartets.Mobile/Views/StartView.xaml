<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Lisa.Quartets.Mobile.StartView"
             xmlns:local="clr-namespace:Lisa.Quartets;assembly=Lisa.Quartets">
	<Grid>
    	<Grid.ColumnDefinitions>
        	<ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="30*" />
            <RowDefinition Height="40*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>

        <Grid.GestureRecognizers>
        	<TapGestureRecognizer Tapped="StartClicked"/>
   		</Grid.GestureRecognizers>

        <Image Grid.Row="0" Grid.Column="0" Source="title.png" VerticalOptions="Start"/>
        <Image Grid.Row="1" Grid.Column="0" Source="button.png" VerticalOptions="Start" />
        <Label Grid.Row="2" Grid.Column="0" Text="Yrsa Kwartet v8" FontSize="10" VerticalOptions="End" HorizontalOptions="End" />
	</Grid>
</ContentPage>