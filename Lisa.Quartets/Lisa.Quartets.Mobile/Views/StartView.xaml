<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Lisa.Quartets.Mobile.StartView" xmlns:local="clr-namespace:Lisa.Quartets;assembly=Lisa.Quartets">
	<ContentPage.Content>
		<StackLayout VerticalOptions="Center">
			<Label XAlign="Center">Wanna play Quartets?</Label>
			<Button Text="Selecteer kaarten" Clicked="SelectCardsClicked" />
			<Button Text="Selecteer kaarten (vink)" Clicked="SelectCardsCheckmarkClicked" />
			<Button Text="Selecteer kaarten (helderheid omgedraaid)" Clicked="SelectCardsInvertedClicked"/>
			<Button Text="Speelbeurt" Clicked="EndOfTurnClicked" />
            <local:UnlockSlider x:Name="slider" Minimum="0" Maximum="100">
                <local:UnlockSlider.Behaviors>
                    <local:UnlockSliderBehavior />
                </local:UnlockSlider.Behaviors>
            </local:UnlockSlider>
            <Label Text="Lisa.Quartets v2" FontSize="10" HorizontalOptions="End" VerticalOptions="End" />
        </StackLayout>
	</ContentPage.Content>
</ContentPage>