<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="Lisa.Quartets.Mobile.IdleView" 
			 xmlns:local="clr-namespace:Lisa.Quartets;assembly=Lisa.Quartets"
			 xmlns:local2="clr-namespace:Lisa.Quartets.mobile;assembly=Lisa.Quartets.mobile" >

    <StackLayout VerticalOptions="Center" WidthRequest="80"> 
        <Label FontSize="Large" VerticalOptions="Center" HorizontalOptions="Center" >Kaart vragen</Label>
        <local:UnlockSlider OnUnlock="RequestCardUnlocked" Value="0"/>

        <Label FontSize="Large" VerticalOptions="Center" HorizontalOptions="Center" >Kaart weggeven</Label>
        <local:UnlockSlider OnUnlock="HandOverCardUnlocked" Value="0" />

        <Label FontSize="Large" VerticalOptions="Center" HorizontalOptions="Center" >Kaarten aanpassen</Label>
        <local:UnlockSlider OnUnlock="EditHandUnlocked" Value="0" />
    </StackLayout>
</ContentPage>
