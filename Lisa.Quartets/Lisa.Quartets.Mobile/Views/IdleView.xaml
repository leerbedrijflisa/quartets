<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="Lisa.Quartets.Mobile.IdleView" 
			 xmlns:local="clr-namespace:Lisa.Quartets;assembly=Lisa.Quartets"
			 xmlns:local2="clr-namespace:Lisa.Quartets.mobile;assembly=Lisa.Quartets.mobile"
			 Padding="0, 20, 0, 0" >

  <StackLayout x:Name="layout">

  	<Grid>
    	<Grid.RowDefinitions>
        	<RowDefinition Height="*" />
        </Grid.RowDefinitions>
              
        <Grid.ColumnDefinitions>
        	<ColumnDefinition Width="25*" />
        	<ColumnDefinition Width="50*" />
        	<ColumnDefinition Width="25*" />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" FontSize="Large" VerticalOptions="Center" HorizontalOptions="Center" >Kaart Kiezen</Label>
        <local:UnlockSlider x:Name="AskCardSlider" OnUnlock="AskCardSliderUnlocked" Grid.Row="0" Grid.Column="1" Value="0" />

    </Grid>


  	<ScrollView x:Name="scrollView" />

  </StackLayout>

</ContentPage>
