<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Lisa.Quartets.Mobile.ConfirmationView" 
             xmlns:local="clr-namespace:Lisa.Quartets;assembly=Lisa.Quartets" >
             Padding="0, 20, 0, 0" 
    <StackLayout x:Name="layout">
        <Label Text="Heb ik de kaart gekregen?" FontSize="Large" HorizontalOptions="Center" VerticalOptions="Start" />
        
        <Grid>
             <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*"/>
             </Grid.RowDefinitions>
               
             <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*" />
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="25*" />
             </Grid.ColumnDefinitions>


             <Label Grid.Row="0" Grid.Column="0" FontSize="Large" VerticalOptions="Center" HorizontalOptions="Center" >Ja</Label>
             <local:UnlockSlider x:Name="YesSlider" OnUnlock="YesClicked" Grid.Row="0" Grid.Column="1" Value="0" />
              
             <Label Grid.Row="1" Grid.Column="0" FontSize="Large" VerticalOptions="Center" HorizontalOptions="Center" >Nee</Label>
             <local:UnlockSlider x:Name="NoSlider" OnUnlock="NoClicked" Grid.Row="1" Grid.Column="1" Value="0"/>
        </Grid>
       
        <Label x:Name="label1" FontSize="Large" HorizontalOptions="Center" VerticalOptions="Start" Text="Maak een keuze" />  
    </StackLayout>
</ContentPage>
